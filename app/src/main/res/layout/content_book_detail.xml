<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.zhm.duxiangle.BookDetailActivity"
    tools:showIn="@layout/activity_book_detail">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                card_view:cardBackgroundColor="#FFFFFF"
                card_view:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/book_cover"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:src="@drawable/book_cover_default" />

                    <TextView
                        android:id="@+id/tvTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_toEndOf="@+id/book_cover"
                        android:layout_toRightOf="@+id/book_cover"
                        android:clickable="true"
                        android:gravity="right|bottom"
                        android:singleLine="true"
                        android:text="Title"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvAuthor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/tvTitle"
                        android:layout_alignStart="@+id/tvTitle"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:text="Author"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/tvIsbn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/book_cover"
                        android:layout_alignLeft="@+id/tvAuthor"
                        android:layout_alignStart="@+id/tvAuthor"
                        android:layout_marginBottom="20dp"
                        android:singleLine="true"
                        android:text="isbn:"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:orientation="horizontal"
                card_view:cardBackgroundColor="#FFFFFF"
                card_view:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/book_cover1"
                        android:layout_width="100dp"
                        android:layout_height="150dp"
                        android:src="@drawable/book_cover_default" />

                    <TextView
                        android:id="@+id/tvTitle1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="20dp"
                        android:layout_toEndOf="@+id/book_cover1"
                        android:layout_toRightOf="@+id/book_cover1"
                        android:clickable="true"
                        android:gravity="right|bottom"
                        android:singleLine="true"
                        android:text="Title"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvAuthor1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/tvTitle1"
                        android:layout_alignStart="@+id/tvTitle1"
                        android:layout_centerVertical="true"
                        android:singleLine="true"
                        android:text="Author"
                        android:textAppearance="?android:attr/textAppearanceMedium" />

                    <TextView
                        android:id="@+id/tvIsbn1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/book_cover1"
                        android:layout_alignLeft="@+id/tvAuthor1"
                        android:layout_alignStart="@+id/tvAuthor1"
                        android:layout_marginBottom="20dp"
                        android:singleLine="true"
                        android:text="isbn:"
                        android:textAppearance="?android:attr/textAppearanceMedium" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar_bookDetail"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

</android.support.v4.widget.NestedScrollView>
